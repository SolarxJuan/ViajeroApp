<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="ViajesApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <!-- Splash Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividades del Pasajero -->
        <activity
            android:name=".passenger.PassengerHomeActivity"
            android:exported="false" />

        <activity
            android:name=".passenger.RequestTripActivity"
            android:exported="false" />

        <activity
            android:name=".passenger.TripInProgressActivity"
            android:exported="false" />

        <activity
            android:name=".passenger.TripHistoryActivity"
            android:exported="false" />

        <activity
            android:name=".passenger.TripDetailActivity"
            android:exported="false" />

        <activity
            android:name=".passenger.PassengerProfileActivity"
            android:exported="false" />

        <activity
            android:name=".passenger.EditProfileActivity"
            android:exported="false" />

        <activity
            android:name=".passenger.ChatListActivity"
            android:exported="false" />

        <activity
            android:name=".passenger.ChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

    </application>

</manifest>