<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con gradiente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/Salmon"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <!-- Foto de perfil -->
            <ImageView
                android:id="@+id/iv_profile_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_profile_default"
                android:background="@drawable/circle_bg_white"
                android:padding="5dp" />

            <!-- Nombre y tipo -->
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alejandro Martínez"
                android:textColor="@color/text_light"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/tv_user_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pasajero"
                android:textColor="@color/text_light"
                android:textSize="14sp"
                android:layout_marginTop="5dp" />

            <!-- Rating y estadísticas -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/rating_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- Estrellas de rating -->
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_user_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★ 4.7 (124 viajes)"
                    android:textColor="@color/text_light"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Información de contacto -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Información de Contacto"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp" />

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_email"
                        android:tint="@color/purple_primary"
                        android:layout_marginRight="15dp" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="alejandro.martinez@email.com"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Teléfono -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_phone"
                        android:tint="@color/purple_primary"
                        android:layout_marginRight="15dp" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+52 555 123 4567"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Miembro desde -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/purple_primary"
                        android:layout_marginRight="15dp" />

                    <TextView
                        android:id="@+id/tv_member_since"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Miembro desde Mayo 2022"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Estadísticas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mis Estadísticas"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Viajes"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_total_trips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="124"
                            android:textColor="@color/purple_primary"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calificación Promedio"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_average_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.7"
                            android:textColor="@color/warning"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Opciones del perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:layout_marginBottom="80dp">

            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Editar Perfil"
                android:textColor="@color/purple_primary"
                android:backgroundTint="@android:color/transparent"
                android:drawableStart="@drawable/ic_edit"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/btn_payment_methods"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Métodos de Pago"
                android:textColor="@color/purple_primary"
                android:backgroundTint="@android:color/transparent"
                android:drawableStart="@drawable/ic_payment"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/btn_preferences"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Preferencias"
                android:textColor="@color/purple_primary"
                android:backgroundTint="@android:color/transparent"
                android:drawableStart="@drawable/ic_settings"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/btn_help"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Centro de Ayuda"
                android:textColor="@color/purple_primary"
                android:backgroundTint="@android:color/transparent"
                android:drawableStart="@drawable/ic_help"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Cerrar Sesión"
                android:textColor="@color/error"
                android:backgroundTint="@android:color/transparent"
                android:drawableStart="@drawable/ic_logout"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="20dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>