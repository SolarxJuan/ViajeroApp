<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Salmon">

    <!-- Información principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/tv_arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Llegada en 5 min"
            android:textColor="@color/text_light"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_distance_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.3 km restantes"
            android:textColor="@color/text_light"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tv_next_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Próxima instrucción: 300m"
            android:textColor="@color/text_light"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <!-- Tarjeta de información del conductor -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <!-- Información del conductor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_profile_default"
                    android:background="@drawable/circle_bg_purple"
                    android:padding="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/tv_driver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carlos Mendoza"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp">

                        <LinearLayout
                            android:id="@+id/rating_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <!-- Estrellas de rating -->
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_driver_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"
                            android:textColor="@color/warning"
                            android:textSize="14sp"
                            android:layout_marginLeft="5dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Ruta -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_pickup"
                        android:tint="@color/purple_primary"
                        android:layout_marginRight="15dp" />

                    <TextView
                        android:id="@+id/tv_pickup_point"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Av. Universidad 3000, Coyoacán"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/divider"
                    android:layout_marginLeft="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_destination"
                        android:tint="@color/blue_secondary"
                        android:layout_marginRight="15dp" />

                    <TextView
                        android:id="@+id/tv_destination"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Plaza Satélite, Naucalpan"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Botón de llegada -->
            <Button
                android:id="@+id/btn_arrived"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="HE LLEGADO AL PUNTO DE RECOGIDA"
                android:textColor="@color/text_light"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_rounded_purple"
                android:layout_marginBottom="15dp" />

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_call_driver"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:text="Llamar"
                    android:textColor="@color/purple_primary"
                    android:backgroundTint="@android:color/transparent"
                    android:drawableStart="@drawable/ic_call"
                    android:layout_marginRight="10dp" />

                <Button
                    android:id="@+id/btn_message_driver"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:text="Mensaje"
                    android:textColor="@color/purple_primary"
                    android:backgroundTint="@android:color/transparent"
                    android:drawableStart="@drawable/ic_message"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botón cancelar -->
    <Button
        android:id="@+id/btn_cancel_trip"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:text="Cancelar Viaje"
        android:textColor="@color/error"
        android:backgroundTint="@android:color/transparent"
        android:drawableStart="@drawable/ic_cancel" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_card"
        app:itemIconTint="@color/selector_nav_item"
        app:itemTextColor="@color/selector_nav_item"
        app:menu="@menu/bottom_nav_menu_passenger" />

</RelativeLayout>