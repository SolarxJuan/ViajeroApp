<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/Salmon</item>
        <item name="colorPrimaryVariant">@color/Salmon</item>
        <item name="colorOnPrimary">@color/text_light</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/Salmon</item>
        <item name="colorSecondaryVariant">@color/Salmon</item>
        <item name="colorOnSecondary">@color/text_light</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/bg_card</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/bg_light</item>

        <!-- Corner radius -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApplication.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyApplication.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyApplication.LargeComponent</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.MyApplication.Splash" parent="Theme.MyApplication">
        <item name="android:windowBackground">@color/Salmon</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Shape appearances -->
    <style name="ShapeAppearance.MyApplication.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.MyApplication.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.MyApplication.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
</resources>